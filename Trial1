print('Welcome to the GOAL TRACKER')


print('\nPlease choose one')
import datetime

goal_name = "Exercise"
goal_dict = {}  
current_streak = 0

def yesterdays_goal():
    return (datetime.date.today() - datetime.timedelta(days=1)).isoformat()

def todays_goal():
    return datetime.date.today().isoformat()

def complete_todays_goal():
    global current_streak
    today = todays_goal()

    if today in goal_dict:
        print("You already marked today's goal as complete.")
        return goal_dict[today] == True

    yesterday = yesterdays_goal()
    if yesterday in goal_dict:
        current_streak += 1
    else:
        current_streak = 1

    print(f"âœ… Goal '{goal_name}' completed for today!")
    print(f"ðŸ”¥ Current streak: {current_streak} day(s)")

def show_status():
    print(f"\n--- Goal Tracker: {goal_name} ---")
    print(f"Days completed: {len(goal_dict)}")
    print(f"Current streak: {current_streak}")
    print("Completed Dates:")
    for date in sorted(goal_dict):
        print(f" - {date}")

def main():
    while True:
        print("\n1. Mark today's goal as complete")
        print("2. Show goal status")
        print("3. Exit")
        choice = input("Option: ")

        if choice == '1':
            complete_todays_goal()
        elif choice == '2':
            show_status()
        elif choice == '3':
            print("Goodbye! Keep up the great work!")
            break
        else:
            print("Invalid option. Please try again.")

main()
